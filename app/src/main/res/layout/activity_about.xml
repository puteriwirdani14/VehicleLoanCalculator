<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP TOOLBAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="About"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/arrow_back_24"
        app:navigationIconTint="@android:color/white" />



    <!-- CONTENT AREA -->


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/face_logo"
            android:contentDescription="Face Logo" />


        <!-- Author Info -->
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: PUTERI WIRDANI BINTI ISHAK\nMatric No: 2023298194\nCourse: ICT602 Mobile Technology"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />

        <!-- Github URL -->
        <TextView
            android:id="@+id/tvGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Source Code on GitHub"
            android:textStyle="bold"
            android:textColor="#2962FF"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Copyright -->
        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Puteri Wirdani All Rights Reserved."
            android:textSize="14sp"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>